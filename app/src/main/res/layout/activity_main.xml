<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_layout"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/couchbaseLogoSmall"
        android:layout_marginTop="20dip"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginLeft="270dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:gravity="center"
        android:src="@drawable/devlogowithouterring"
        />

    <ImageView
        android:id="@+id/firstSteps"
        android:layout_marginTop="-20dip"
        android:layout_width="216dp"
        android:layout_height="154dp"
        android:layout_marginLeft="30dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:gravity="center"
        android:src="@drawable/dataaccesstestbanner"
        />

    <TextView
        android:id="@+id/spinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="30dp"
        android:text="Weather condition:"
        />

    <Spinner
        android:id="@+id/spinnerForName"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:layout_width="1200px"
        android:layout_height="300px"
     />

    <TextView
        android:id="@+id/minPickerLabel2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="30dp"
        android:text="Range-minimum:"
        />

    <NumberPicker
        android:id="@+id/numberPickerForMinValue"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"
     />

    <TextView
        android:id="@+id/maxPickerLabel"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="190dp"
        android:text="Range-maximum:"
        />

    <NumberPicker
        android:id="@+id/numberPickerForMaxValue"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="210dp"
        />

    <!-- A button with the word "Send" on it. -->
    <Button
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="376dp"
        android:id="@+id/sendButton"
        android:text="Send"
        android:layout_width="580px"
        android:layout_height="300px"
        android:onClick="sendMessage"/>

    <!-- A button with the word "Voice" on it. -->
    <Button
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="376dp"
        android:id="@+id/voiceButton"
        android:text="Voice"
        android:layout_width="580px"
        android:layout_height="300px"
        android:onClick="voiceTests"/>

    <TextView
        android:id="@+id/outputRegion"
        android:layout_height="100dp"
        android:layout_marginTop="474dp"
        android:layout_width="1000px"
        android:layout_marginLeft="70dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#384c51"
        />

</RelativeLayout>
